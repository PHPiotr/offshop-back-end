head
  link(rel="stylesheet", href="/styles.css", data-inline)

h1 Transakcja zakończona pomyślnie.

h2 Realizujemy Twoje zamówienie.

div(class='card')
  ul
    each id in productsIds
      li
        div(class='list-item')
          div(class='avatar')
            img(src=`https://offshop-back-end.serveo.net/images/products/${productsById[id].slug}.avatar.png`)
          div(class='item-text')
            span(class='primary') #{productsById[id].name} (#{productsById[id].quantity} szt.)
            p(class='secondary')
              span #{(productsById[id].unitPrice / 100).toFixed(2)} zł / szt.
      hr
  if Number(totalAmount) > totalWithoutDelivery
    li(class='total')
      div
        span(class='primary') Razem bez dostawy
      h6 #{(totalWithoutDelivery / 100).toFixed(2)} zł
    hr
    li(class='total')
      div
        span(class='primary') #{deliveryMethod.name} (#{totalWeight} kg)
        p(class='secondary') #{deliveryMethod.unitPrice} zł / kg
      h6(class='normal') #{((Number(totalAmount) - totalWithoutDelivery) / 100).toFixed(2)} zł
    hr
    li(class='total')
      div
        span(class='primary') Razem z dostawą
      h6
        strong #{(Number(totalAmount) / 100).toFixed(2)} zł
    hr
  else
    li(class='total')
      div
        span(class='primary')= deliveryMethod.name
      h6(class='normal') 0.00 zł
    hr
    li(class='total')
      div
        span(class='primary') Razem
      h6
        strong #{(Number(totalAmount) / 100).toFixed(2)} zł
    hr
